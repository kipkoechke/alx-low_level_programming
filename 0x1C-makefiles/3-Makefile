#!/usr/bin/env make
# Makefile with PHONY targets

# Phony targets
.PHONY: clean
.PHONY: oclean
.PHONY: fclean
.PHONY: re

# Variables
CC = gcc  # Compiler
SRC = main.c school.c  # Source files
OBJ = $(SRC:.c=.o)  # Object files
NAME = school  # Executable name
RM = rm -f  # File removal command

# Targets
all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all
